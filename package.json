{
  "name": "percy-client",
  "version": "0.1.0",
  "description": "Client library for percy.io",
  "main": "dist/main.js",
  "scripts": {
    "build:compile": "babel main.js --presets babel-preset-es2015 --out-dir dist",
    "build:browserify": "browserify --ignore cls-bluebird dist/main.js > dist/bundle.js",
    "build": "npm run build:compile && npm run build:browserify",
    "test": "mocha --require babel-core/register",
    "tdd": "mocha --require babel-core/register --watch"
  },
  "files": ["dist/"],
  "repository": {
    "type": "git",
    "url": "https://github.com/percy/percy-js.git"
  },
  "author": "Perceptual Inc.",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/percy/percy-js/issues"
  },
  "homepage": "https://github.com/percy/percy-js",
  "devDependencies": {
    "babel-cli": "^6.9.0",
    "babel-core": "^6.4.5",
    "babel-preset-es2015": "^6.3.13",
    "browserify": "^13.0.1",
    "mocha": "^2.4.5",
    "nock": "^7.7"
  },
  "dependencies": {
    "request-promise": "^3.0"
  }
}
